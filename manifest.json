{
  "description": "Add Skeb button to Twitter.",
  "manifest_version": 3,
  "name": "Skeb Button",
  "version": "1.3",

  "host_permissions": [
    "https://*.twitter.com/",
    "https://skeb.jp/",
    "https://*.x.com/"
  ],

  "action": {
    "default_icon": "128.png",
    "default_title": "Skeb Button"
  },

  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["index.js"]
    }
  ],

  "icons": {
    "128": "128.png"
  }
}
